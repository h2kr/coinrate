<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.GameScreen"
    >

    <Button
        android:background="#05FF73"
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/v1_cnt"
        android:layout_toRightOf="@+id/v1_cnt"
        android:text="buy"/>

    <Button
        android:id="@+id/v1_cnt"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"/>

    <Button
        android:background="#FFD214"
        android:id="@+id/sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/v1_cnt"
        android:layout_toLeftOf="@+id/v1_cnt"
        android:text="sell" />

    <TextView
        android:id="@+id/dollars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buy"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="120$"
        android:textSize="35dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/dollars"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/dollars"
        android:layout_toLeftOf="@+id/dollars"
        android:background="@drawable/ic_money" />

    <TextView
        android:id="@+id/coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dollars"
        android:text="10"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/coins"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/coins"
        android:layout_toLeftOf="@+id/coins"
        android:background="@drawable/ic_coins" />

    <TextView
        android:id="@+id/rat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="RATE"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/rate"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rat"
        android:layout_marginTop="0dp"
        android:text="123"
        android:textSize="60dp"
        android:fontFamily="sans-serif-light"/>

    <ImageView
        android:id="@+id/rate_icon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_rate" />

</RelativeLayout>